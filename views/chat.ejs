<script>
  const navList = [ 
    { tab: 'tablink_world', nav: 'nav_world' },
    { tab: 'tablink_whisper', nav: 'nav_whisper' },
    { tab: 'tablink_party', nav: 'nav_party' },
  ];
  function selectedTabNav(id) {
    for(let i in navList) {
      const item = navList[i];
      if(item.tab == id) {
        $(`#${item.tab}`).removeClass('active_chat').addClass('active_chat');
        $(`#${item.nav}`).removeClass('show active').addClass('show active');
      }
      else {
        $(`#${item.tab}`).removeClass('active_chat');
        $(`#${item.nav}`).removeClass('show active');
      }
    }
    sessionStorage.currentTab = id;
  }

  function sendChat(message) {
    if (!sessionStorage.nick) {
      return alert('not connected');
    }

    const ChatType = { "WORLD": 0, "WHISPER":2, "PARTY":3 };
    let msg = $('.write_msg').val();
    $('.write_msg').val('');

    let chatType = ChatType.WORLD;
    let chatTarget = 0;
    if(sessionStorage.currentTab == 'tablink_whisper') {
      chatType = ChatType.WHISPER;
      let indexSlice = msg.indexOf(' ');
      if(indexSlice == -1) 
        return alert('whisper chat format : [UserSeq] [Message]');
      chatTarget = msg.slice(0, indexSlice);
      msg = msg.slice(indexSlice + 1);
    }
    else if(sessionStorage.currentTab == 'tablink_party') {
      chatType = ChatType.PARTY;
    }

    if(msg.length <= 0) {
      return alert('empty message');
    }
    
    if(chatType == ChatType.WORLD) {
      socket.emit('30201', {
        channel: sessionStorage.worldChannelId,
        eChatMsgType: '0',
        message: msg,
      });
      const item = renderOutgoningMessage(msg);
      $('#chatbox-world').append(item);
      $('#chatbox-world').scrollTop($('#chatbox-world').height());
    }
    else if(chatType == ChatType.WHISPER) {  
      socket.emit('30201', {
        channel: parseInt('wr' + chatTarget, 36),
        eChatMsgType: '2',
        message: msg
      });
      const item = renderOutgoningMessage(`=>${chatTarget} ` + msg);    
      $('#chatbox-whisper').append(item);
      $('#chatbox-whisper').scrollTop($('#chatbox-whisper').height());
    }
    else if(chatType == ChatType.PARTY) {
      socket.emit('30201', {
        channel: sessionStorage.partyChannelId,
        eChatMsgType: '3',
        message: msg
      });
      const item = renderOutgoningMessage(msg);    
      $('#chatbox-party').append(item);
      $('#chatbox-party').scrollTop($('#chatbox-party').height());
    }
  }

  function onConnected() {
    console.log('Connected');
    sessionStorage.nick = undefined;
    sessionStorage.worldChannelId = undefined;
    sessionStorage.whisper = undefined;
    $('#connectTitle').text('-');
    selectedTabNav('tablink_world');
  }

  function onDisconnected() {
    console.log('Disconnected');
    sessionStorage.nick = undefined;
    sessionStorage.worldChannelId = undefined;
    sessionStorage.whisper = undefined;
    $('#connectTitle').text('-');
  }

  function csChatConnect(data) {
  }  
  function csChatSend(data) {
  }
  function csChatChannel(data) {
    sessionStorage.worldChannelId = data.channel;
    $('#worldChannelName').text(`${sessionStorage.worldChannelId}`);
  }
  function pcChatJoin(data) { 
    console.log(data);
    sessionStorage.worldChannelId = data.channel;
    sessionStorage.id = data.id;
    sessionStorage.nick = data.nick;
    sessionStorage.whisper = parseInt('wr' + sessionStorage.userSeq, 36)
    $('#connectTitle').text(`${sessionStorage.nick} (${sessionStorage.id})`);
    $('#worldChannelName').text(`${sessionStorage.worldChannelId}`);
    $('#whisperChannelName').text(`${sessionStorage.whisper}`);
  }
  function pcChatSend(data) { 
    const item = renderIncomingMessage(data);
    if(data.eChatMsgType == 0) {
      $('#chatbox-world').append(item);
      $('#chatbox-world').scrollTop($('#chatbox-world').height());
    }
    else if(data.eChatMsgType == 2) {
      if(sessionStorage.userSeq != data.profile.userSeq) {
        $('#chatbox-whisper').append(item);
        $('#chatbox-whisper').scrollTop($('#chatbox-whisper').height());
      }
    }
    else if(data.eChatMsgType == 3) {
      $('#chatbox-party').append(item);
      $('#chatbox-party').scrollTop($('#chatbox-party').height());
    }
  }
  
  function renderOutgoningMessage(data) {
    const msg = data;
    const date = new Date();
    return `
    <div class="outgoing_msg">
      <div class="sent_msg">
        <p>${msg}</p>
        <span class="time_date">${date.toLocaleTimeString()}</span>
      </div>
    </div>`;
  }

  function renderIncomingMessage(data) {
    let name = data.profile.nick;
    if(data.eChatMsgType == 2) {
      name += `:${data.profile.userSeq}`;
    }
    const msg = data.message;
    const date = new Date(data.time);
    return `
    <div class="incoming_msg">
      <div class="received_msg">
        <div class="received_withd_msg">
          <p><b>[${name}]</b> ${msg}</p>
          <span class="time_date">${date.toLocaleTimeString()}</span>
        </div>
      </div>
    </div>`;
  }
</script>

