                <button class="msg_send_btn" id="defaultEnterButton" type="button" onclick="sendChat()">
                  <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                </button>
                <script>
                  const input = document.getElementById("defaultEnterInput");
                  input.addEventListener("keyup", function(event) {
                    if (event.keyCode === 13) {
                      event.preventDefault();
                      document.getElementById("defaultEnterButton").click();
                    }
